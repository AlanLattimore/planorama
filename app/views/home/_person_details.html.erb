<nav class="level">
  <div class="level-left">
  </div>
  <div class="level-right">
    <div class="level-item">
      <b-button
        icon-left="save"
        icon-pack='fa'
        @click="onSave"
      >
        Save
      </b-button>
    </div>
    <div class="level-item">
      <b-button
        icon-left="edit"
        icon-pack='fa'
        @click="editable = true"
      >
      </b-button>
    </div>
  </div>
</nav>

<b-field grouped>
  <b-field label="First Name" label-position="on-border" expanded>
    <b-input
      :lazy=true
      maxlength="60"
      :disabled="!editable"
      v-model="selected.first_name"
    ></b-input>
  </b-field>
  <b-field label="Last Name" label-position="on-border" expanded>
    <b-input
      :lazy=true
