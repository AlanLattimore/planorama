<div class="row">
  <div class="col mb-3">
    <label>Invite Status</label>
    <b-form-select
      :disabled="!editable"
      v-model="selected.invite_status"
    >
      <b-form-select-option value="not_set">Unknown</b-form-select-option>
      <b-form-select-option value="do_not_invite">Do not invite</b-form-select-option>
      <b-form-select-option value="potential_invite">Potential Invite</b-form-select-option>
      <b-form-select-option value="invite_pending">Invite Pending</b-form-select-option>
      <b-form-select-option value="invited">Invited</b-form-select-option>
      <b-form-select-option value="volunteered">Volunteered</b-form-select-option>
    </b-form-select>
  </div>
  <div class="col mb-3">
    <label>Acceptance Status</label>
    <b-form-select
      :disabled="!editable"
      v-model="selected.acceptance_status">
      <b-form-select-option value="unknown">Unknown</b-form-select-option>
      <b-form-select-option value="probable">Probable</b-form-select-option>
      <b-form-select-option value="accepted">Accepted</b-form-select-option>
      <b-form-select-option value="declined">Declined</b-form-select-option>
    </b-form-select>
  </div>
</div>

