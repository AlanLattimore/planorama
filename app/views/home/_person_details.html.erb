    ></b-input>
  </b-field>
  <b-field label="Suffix" label-position="on-border">
    <b-input
      :lazy=true
      maxlength="10"
      :disabled="!editable"
      v-model="selected.suffix"
    ></b-input>
  </b-field>
</b-field>
