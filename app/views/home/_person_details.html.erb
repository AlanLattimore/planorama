<b-field grouped>
  <b-field label="Invite Status" label-position="on-border" expanded>
    <b-select
      :disabled="!editable"
      v-model="selected.invite_status"
    >
      <option value="not_set">Unknown</option>
      <option value="do_not_invite">Do not invite</option>
      <option value="potential_invite">Potential Invite</option>
      <option value="invite_pending">Invite Pending</option>
      <option value="invited">Invited</option>
      <option value="volunteered">Volunteered</option>
    </b-select>
  </b-field>
  <b-field label="Acceptance Status" label-position="on-border" expanded>
    <b-select
      :disabled="!editable"
      v-model="selected.acceptance_status"
    >
      <option value="unknown">Unknown</option>
      <option value="probable">Probable</option>
      <option value="accepted">Accepted</option>
      <option value="declined">Declined</option>
    </b-select>
  </b-field>
</b-field>

