<%#= stylesheet_pack_tag 'people_vue' %>
<%= javascript_pack_tag 'people_vue' %>

<div id="people-app">
  <table-with-sidebar-component
      :model-type="modelType"
      :select-event="selectEvent"
      :save-event="saveEvent"
      :sort-field="sortField"
      :columns="columns"
      :collection="collection"
    >
    <template v-slot:sidebar-header="slotProps">
      <div v-if="slotProps.selected">
        <h1 class="title">{{slotProps.selected.published_name}}</h1>
      </div>
    </template>
    <template v-slot:sidebar-content="slotProps">
      <div v-if="slotProps.selected" class="px-3 py-2">
        <b-tabs content-class="mt-3">
          <b-tab title="Details" active>
            <%= render partial: "person_details" %>
          </b-tab>
          <b-tab title="Bio">
            <p>TODO: BIO</p>
          </b-tab>
          <b-tab title="Tags">
            <p>TODO: TAGS</p>
            <!--
            <b-field grouped>
             <b-field label="Tags">
               <b-taginput
                   v-model="selected.tags"
                   ellipsis
                   icon="label"
                   placeholder="Add a tag"
                   aria-close-label="Delete this tag">
               </b-taginput>
             </b-field>
            </b-field>
            -->
          </b-tab>
        </b-tabs>
      </div>
    </template>
  </table-with-sidebar-component>
</div>
