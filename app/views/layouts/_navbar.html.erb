
<% if current_person %>
<div id='top-navbar' class="container">
  <b-navbar>
    <template slot="brand">
      <b-navbar-item href="/">
        <img
          src="https://i1.wp.com/chicon.org/wp-content/uploads/2018/08/2022ChicagoWorldconBidLogo_3Color_Web_800_TransparentBack.png"
          alt="Planorama: SF Convention Planning Tool"
        >
      </b-navbar-item>
    </template>

    <template slot="start">
      <b-navbar-item href="/">
        Home
      </b-navbar-item>
      <b-navbar-item
        v-bind:active="currentLocation == '/page/venues'"
        href="/page/venues"
      >
        Venues
      </b-navbar-item>
      <b-navbar-item
        bind:active="currentLocation == '/page/people'"
        href="/page/people"
      >
        People
      </b-navbar-item>
      <b-navbar-item
        bind:active="currentLocation == '/page/program'"
        href="/page/program"
      >
        Schedule
      </b-navbar-item>
      <b-navbar-item
        bind:active="currentLocation == '/page/surveys'"
        href="/page/surveys"
      >
        Surveys
      </b-navbar-item>
      <b-navbar-item
        bind:active="currentLocation == '/page/reports'"
        href="/page/reports"
      >
        Reports
      </b-navbar-item>
    </template>

    <template slot="end">
      <b-navbar-item tag="div">
        <div class="buttons">
          <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'button is-primary') %>
        </div>
      </b-navbar-item>
    </template>
  <b-navbar>
</div>
<% end %>
